{
    "compilerOptions": {
        "target": "esnext",

        "module": "esnext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,

        "noEmit": true,
        "sourceMap": true,
        "skipLibCheck": true,

        "jsx": "react-jsx",
        "outDir": "tsc_build",
        "baseUrl": "./",
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src"
    ]
}
